        ];

        var routeLine = L.polyline(routeCoordinates, {
            color: 'blue',
            weight: 5,
            opacity: 0.7
        }).addTo(map);

        map.fitBounds(routeLine.getBounds());

        routeCoordinates.forEach(function(coord) {
            L.marker(coord).addTo(map);
